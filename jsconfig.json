{
  "compilerOptions": {
    "baseUrl": ".", // Set the base directory for absolute imports
    "module": "esnext", // Use ESNext module resolution
    "paths": {
      "/core/*": ["core/*"], // Map /core to the core directory
      "/i18n/*": ["i18n/*"], // Map /i18n to the i18n directory
      "/page/*": ["page/*"],  // Map /page to the page directory
      "/layout/*": ["layout/*"]  // Map /layout to the layout directory
    },
    "target": "es6"
  },
  "include": ["**/*.js"] // Include all JavaScript files
}